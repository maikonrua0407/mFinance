        <my:String x:Key="U.TinDung.PopupNghiepVu.ucPopupChiTietThucThu.NgayTra">Ngày trả</my:String>
        <my:String x:Key="U.TinDung.PopupNghiepVu.ucPopupChiTietThucThu.Lai">Lãi</my:String>
