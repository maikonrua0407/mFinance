        <my:String x:Key="U.KhachHang.KhachHang.ucSoTaiKhoanDS.NgheNghiep:">Nghề nghiệp:</my:String>
        <my:String x:Key="U.KhachHang.KhachHang.ucSoTaiKhoanDS.DanToc:">Dân tộc:</my:String>
