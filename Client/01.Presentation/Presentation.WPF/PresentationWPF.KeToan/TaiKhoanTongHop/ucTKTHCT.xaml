<UserControl x:Class="PresentationWPF.KeToan.TaiKhoanTongHop.ucTKTHCT"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:PresentationWPF.CustomControl;assembly=PresentationWPF.CustomControl"
             xmlns:local="clr-namespace:PresentationWPF.KeToan.TaiKhoanTongHop"
             xmlns:ribbon="http://schemas.microsoft.com/winfx/2006/xaml/presentation/ribbon" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
             xmlns:my="clr-namespace:System;assembly=mscorlib"
             d:DesignHeight="768" d:DesignWidth="1024" KeyDown="UserControl_KeyDown">
    <UserControl.CommandBindings>
        <CommandBinding CanExecute="AddCommand_CanExecute" Executed="AddCommand_Executed" Command="{x:Static local:ucTKTHCT.AddCommand}">
        </CommandBinding>
        <CommandBinding CanExecute="HoldCommand_CanExecute" Executed="HoldCommand_Executed" Command="{x:Static local:ucTKTHCT.HoldCommand}">
        </CommandBinding>
        <CommandBinding CanExecute="SaveCommand_CanExecute" Executed="SaveCommand_Executed" Command="{x:Static local:ucTKTHCT.SaveCommand}">
        </CommandBinding>
        <CommandBinding CanExecute="ModifyCommand_CanExecute" Executed="ModifyCommand_Executed" Command="{x:Static local:ucTKTHCT.ModifyCommand}">
        </CommandBinding>
        <CommandBinding CanExecute="DeleteCommand_CanExecute" Executed="DeleteCommand_Executed" Command="{x:Static local:ucTKTHCT.DeleteCommand}">
        </CommandBinding>
        <CommandBinding CanExecute="ApproveCommand_CanExecute" Executed="ApproveCommand_Executed" Command="{x:Static local:ucTKTHCT.ApproveCommand}">
        </CommandBinding>
        <CommandBinding CanExecute="RefuseCommand_CanExecute" Executed="RefuseCommand_Executed" Command="{x:Static local:ucTKTHCT.RefuseCommand}">
        </CommandBinding>
        <CommandBinding CanExecute="CancelCommand_CanExecute" Executed="CancelCommand_Executed" Command="{x:Static local:ucTKTHCT.CancelCommand}">
        </CommandBinding>
        <CommandBinding CanExecute="HelpCommand_CanExecute" Executed="HelpCommand_Executed" Command="{x:Static local:ucTKTHCT.HelpCommand}">
        </CommandBinding>
        <CommandBinding CanExecute="CloseCommand_CanExecute" Executed="CloseCommand_Executed" Command="{x:Static local:ucTKTHCT.CloseCommand}">
        </CommandBinding>
    </UserControl.CommandBindings>
    <UserControl.Resources>
        <DataTemplate x:Key="HeaderTemplate" DataType="{x:Type my:String}">
            <Grid HorizontalAlignment="Left" Height="45">
                <AccessText Text="{Binding}" TextWrapping="Wrap" VerticalAlignment="Center"/>
            </Grid>
        </DataTemplate>
        
        <my:String x:Key="U.DungChung.ThongTinChung">_1. Thông tin chung</my:String>
        <my:String x:Key="U.DungChung.ThongTinKiemSoat">_2. Thông tin kiểm soát</my:String>
        <my:String x:Key="U.DungChung.NgayLap">Ngày lập:</my:String>
        <my:String x:Key="U.DungChung.NguoiLap">Người lập:</my:String>
        <my:String x:Key="U.DungChung.NgayCapNhat">Ngày cập nhật:</my:String>
        <my:String x:Key="U.DungChung.NguoiCapNhat">Người cập nhật:</my:String>
        <my:String x:Key="U.DungChung.HeaderDataColumn.STT">STT</my:String>
        <my:String x:Key="U.DungChung.TrangThaiNghiepVu">Trạng thái:</my:String>
        <my:String x:Key="U.DungChung.TrangThaiNghiepVu.ChoDuyet">Chờ duyệt</my:String>
        <my:String x:Key="U.DungChung.Button.Luu">Lưu</my:String>
        <my:String x:Key="U.DungChung.Button.Xoa">Xóa</my:String>
        <my:String x:Key="U.DungChung.Button.Duyet">Duyệt</my:String>
        <my:String x:Key="U.DungChung.Button.Tuchoi">Từ chối</my:String>
        <my:String x:Key="U.DungChung.Button.Thoaiduyet">Thoái duyệt</my:String>
        <my:String x:Key="U.DungChung.Button.XuatExcel">Xuất Excel</my:String>
        <my:String x:Key="U.DungChung.Button.Dong">Đóng</my:String>
        <my:String x:Key="U.DungChung.CheckBox.Themnhieulan">Thêm nhiều lần</my:String>
        <my:String x:Key="U.DungChung.ThongTinKiemSoat.TrangThaiBanGhi">Trạng thái bản ghi</my:String>
        <my:String x:Key="U.DungChung.ThongTinKiemSoat.NgayLapGD">Ngày lập giao dịch:</my:String>
        <my:String x:Key="U.DungChung.ThongTinKiemSoat.NgayLap">Ngày lập:</my:String>
        <my:String x:Key="U.DungChung.ThongTinKiemSoat.NguoiLap">Người lập:</my:String>
        <my:String x:Key="U.DungChung.ThongTinKiemSoat.NgayCapNhat">Ngày cập nhật:</my:String>
        <my:String x:Key="U.DungChung.ThongTinKiemSoat.NguoiCapNhat">Người cập nhật:</my:String>
        <my:String x:Key="U.DungChung.NgayDuyet">Ngày duyệt:</my:String>
        <my:String x:Key="U.DungChung.NguoiDuyet">Người duyệt:</my:String>
        <my:String x:Key="U.KeToan.TaiKhoanTongHop.ucTKTHCT.HeThongTaiKhoan">Hệ thống tài khoản</my:String>
        <my:String x:Key="U.KeToan.TaiKhoanTongHop.ucTKTHCT.ThongTinTaiKhoan">Thông tin tài khoản</my:String>
        <my:String x:Key="U.KeToan.TaiKhoanTongHop.ucTKTHCT.MaPLTKCapTren">Mã PLTK cấp trên:</my:String>
        <my:String x:Key="U.KeToan.TaiKhoanTongHop.ucTKTHCT.MaPLTK:">Mã PLTK:</my:String>
        <my:String x:Key="U.KeToan.TaiKhoanTongHop.ucTKTHCT.LoaiTaiKhoan:">Loại tài khoản:</my:String>
        <my:String x:Key="U.KeToan.TaiKhoanTongHop.ucTKTHCT.LoaiThuNhapChiPhi:">Loại thu nhập/chi phí:</my:String>
        <my:String x:Key="U.KeToan.TaiKhoanTongHop.ucTKTHCT.TinhChat:">Tính chất:</my:String>
        <my:String x:Key="U.KeToan.TaiKhoanTongHop.ucTKTHCT.TinhChatGoc:">Tính chất gốc:</my:String>
        <my:String x:Key="U.KeToan.TaiKhoanTongHop.ucTKTHCT.TinhChatBTru:">Tính chất bù trừ:</my:String>
        <my:String x:Key="U.KeToan.TaiKhoanTongHop.ucTKTHCT.NhomTaiKhoan:">Nhóm tài khoản:</my:String>
        <my:String x:Key="U.KeToan.TaiKhoanTongHop.ucTKTHCT.NgayApDung:">Ngày áp dụng:</my:String>
        <my:String x:Key="U.KeToan.TaiKhoanTongHop.ucTKTHCT.TenPLTKCapTren">Tên PLTK cấp trên</my:String>
        <my:String x:Key="U.KeToan.TaiKhoanTongHop.ucTKTHCT.TenPLTK">Tên PLTK:</my:String>
        <my:String x:Key="U.KeToan.TaiKhoanTongHop.ucTKTHCT.LoaiKHNoiBo">Loại KH/Nội bộ:</my:String>
        <my:String x:Key="U.KeToan.TaiKhoanTongHop.ucTKTHCT.TheoDoiCongNo">Theo dõi công nợ:</my:String>
        <my:String x:Key="U.KeToan.TaiKhoanTongHop.ucTKTHCT.Co">Có</my:String>
        
    </UserControl.Resources>
    <Grid Name="grMain">
        <DockPanel Name="dockMain">
            <DockPanel.ContextMenu>
                <ContextMenu Name="mnuMain"></ContextMenu>
            </DockPanel.ContextMenu>
            <DockPanel HorizontalAlignment="Stretch" DockPanel.Dock="Top" Margin="3,3,0,3" LastChildFill="False" Name="docToolbar">
                <WrapPanel Name="Toolbar">
                    <ribbon:RibbonButton Margin="3,0,0,0" Name="tlbAdd" DockPanel.Dock="Left" Label="{DynamicResource U.DungChung.Button.Them}" SmallImageSource="pack://application:,,,/Utilities.Common;component/Images/Action/add.png" Style="{DynamicResource RibbonButton}" Click="tlbHotKey_Click" />
                    <ribbon:RibbonButton Margin="3,0,0,0" Name="tlbModify" DockPanel.Dock="Left" Label="{DynamicResource U.DungChung.Button.Sua}"  SmallImageSource="pack://application:,,,/Utilities.Common;component/Images/Action/modify.png" Style="{DynamicResource RibbonButton}" Click="tlbHotKey_Click" />
                    <ribbon:RibbonButton Margin="3,0,0,0" Name="tlbDelete" DockPanel.Dock="Left" Label="{DynamicResource U.DungChung.Button.Xoa}"  SmallImageSource="pack://application:,,,/Utilities.Common;component/Images/Action/delete.png" Style="{DynamicResource RibbonButton}" Click="tlbHotKey_Click" />
                    <ribbon:RibbonButton Margin="3,0,0,0" Name="tlbSave" DockPanel.Dock="Left" Label="{DynamicResource U.DungChung.Button.Luu}"  SmallImageSource="pack://application:,,,/Utilities.Common;component/Images/Action/save.png" Style="{DynamicResource RibbonButton}" Click="tlbHotKey_Click" />
                    <Label Name="lbl2" Margin="3,0,0,0" DockPanel.Dock="Left" BorderThickness="3" Width="2" BorderBrush="#FF170404" />
                    <ribbon:RibbonButton Margin="3,0,0,0" Name="tlbHelp" DockPanel.Dock="Left" Label="{DynamicResource U.DungChung.Button.TroGiup}"  SmallImageSource="pack://application:,,,/Utilities.Common;component/Images/Action/help.png" Style="{DynamicResource RibbonButton}" Click="tlbHotKey_Click" />
                    <ribbon:RibbonButton Margin="3,0,0,0" Name="tlbClose" DockPanel.Dock="Left" Label="{DynamicResource U.DungChung.Button.Dong}"  SmallImageSource="pack://application:,,,/Utilities.Common;component/Images/Action/close.png" Style="{DynamicResource RibbonButton}" Click="tlbHotKey_Click" />
                </WrapPanel>
                <CheckBox Margin="0,0,3,5" VerticalAlignment="Bottom" DockPanel.Dock="Right" Content="{DynamicResource U.DungChung.Checkbox.ThemNhieuLan}" Height="16" Name="cbMultiAdd" />
            </DockPanel>
            <telerik:RadTabControl Name="tabNSDCT" TabStripPlacement="Left" TabOrientation="Vertical" Align="Right">
                <telerik:RadTabItem Name="titemThongTinChung" Header="{DynamicResource U.DungChung.Tab.ThongTinChung_1}" TabIndex="0" HeaderTemplate="{StaticResource HeaderTemplate}" HorizontalContentAlignment="Left" Height="{Binding ElementName=grMain, Path=ActualWidth,
                Converter={uc:MathConverter}, ConverterParameter=x/5}" IsSelected="True">
                    <!--<ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">-->
                    <DockPanel>
                        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="1" CornerRadius="4" Margin="3" Padding="15,5" BorderBrush="LightGray" DockPanel.Dock="Top">
                            <Grid VerticalAlignment="Center" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <Label Name="lblLabelTrangThai" HorizontalAlignment="Left" Content="{DynamicResource U.DungChung.TrangThaiNghiepVu}"></Label>
                                    <Label Name="lblTrangThai" Content="{DynamicResource U.DungChung.TrangThaiNghiepVu.ChoDuyet}"></Label>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <GroupBox Header="{DynamicResource U.KeToan.TaiKhoanTongHop.ucTKTHCT.ThongTinTaiKhoan}" Margin="3" Padding="10" Name="grbThongTin">
                            <Grid Name="grdTaiKhoan" VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.3*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="1.3*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="6" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="6" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="6" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="6" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="6" />
                                    <RowDefinition Height="2*" />
                                    <RowDefinition Height="6" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Label Grid.Column="3" Grid.Row="0" Content="{DynamicResource U.KeToan.TaiKhoanTongHop.ucTKTHCT.MaPLTKCapTren}" />
                                <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="2">
                                    <Label Content="{DynamicResource U.KeToan.TaiKhoanTongHop.ucTKTHCT.MaPLTK:}" />
                                    <Label Content="(*)" Foreground="Red" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="2">
                                    <Label Content="{DynamicResource U.KeToan.TaiKhoanTongHop.ucTKTHCT.NhomTaiKhoan:}" />
                                    <Label Content="(*)" Foreground="Red" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="6">
                                    <Label Content="{DynamicResource U.KeToan.TaiKhoanTongHop.ucTKTHCT.LoaiTaiKhoan:}" />
                                    <Label Content="(*)" Foreground="Red" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="6">
                                    <Label Content="{DynamicResource U.KeToan.TaiKhoanTongHop.ucTKTHCT.LoaiThuNhapChiPhi:}" />
                                    <Label Content="(*)" Foreground="Red" Name="lblRedLoaiTNChiPhi" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="10">
                                    <Label Content="{DynamicResource U.KeToan.TaiKhoanTongHop.ucTKTHCT.TinhChat:}" />
                                    <Label Content="(*)" Foreground="Red" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="8">
                                    <Label Content="{DynamicResource U.KeToan.TaiKhoanTongHop.ucTKTHCT.NgayApDung:}" />
                                    <Label Content="(*)" Foreground="Red" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="10" Name="stpTinhChatGocTK">
                                    <Label Content="{DynamicResource U.KeToan.TaiKhoanTongHop.ucTKTHCT.TinhChatGoc:}" />
                                    <Label Content="(*)" Foreground="Red" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="12" Name="stpTinhChatBTru" Visibility="Collapsed">
                                    <Label Content="{DynamicResource U.KeToan.TaiKhoanTongHop.ucTKTHCT.TinhChatBTru:}" />
                                    <Label Content="(*)" Foreground="Red" />
                                </StackPanel>
                                <Label Grid.Column="0" Grid.Row="0" Content="{DynamicResource U.KeToan.TaiKhoanTongHop.ucTKTHCT.HeThongTaiKhoan}" Name="lblHeThongTaiKhoan" />
                                <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="4">
                                    <Label Content="{DynamicResource U.KeToan.TaiKhoanTongHop.ucTKTHCT.TenPLTK}" />
                                    <Label Content="(*)" Foreground="Red" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="6"/>

                                <Label Grid.Column="0" Grid.Row="8" Content="{DynamicResource U.KeToan.TaiKhoanTongHop.ucTKTHCT.TheoDoiCongNo}" />
                                <telerik:RadComboBox Name="cmbHeThongTaiKhoan" Grid.Column ="1" Grid.Row="0" IsEditable="True" TextSearchMode="Contains" IsFilteringEnabled="True" IsTextSearchEnabled="True" OpenDropDownOnFocus="True" />
                                <TextBox Grid.Column="4" Grid.Row="0" Name="txtMaPLTKCapTren" Margin="0,0,40,0" Padding="3" />
                                <Button Grid.Column="4" Grid.Row="0" Name="btnMaPLTKCapTren" HorizontalAlignment="Right" Content="F3" Width="30" Click="btnMaPLTKCapTren_Click" />
                                <TextBox Grid.Column="1" Grid.Row="2" Name="txtMaPLTK" Margin="0,0,0,0" Padding="3" />

                                <telerik:RadComboBox Name="cmbKyHieu" Grid.Column ="4" Grid.Row="2" IsEditable="True" TextSearchMode="Contains" IsFilteringEnabled="True" IsTextSearchEnabled="True" OpenDropDownOnFocus="True" />
                                <TextBox Grid.Column="1" Grid.Row="4" Name="txtTenPLTK" Margin="0,0,0,0" Padding="3"  Grid.ColumnSpan="4"/>
                                <telerik:RadComboBox Grid.Column="1" Grid.Row="6" Name="cmbLoaiTK" />
                                <telerik:RadComboBox Grid.Column="4" Grid.Row="6" Name="cmbLoaiTNCP" IsEnabled="False" />
                                <CheckBox Content="{DynamicResource U.KeToan.TaiKhoanTongHop.ucTKTHCT.Co}" Grid.Column="1" Grid.Row="8" HorizontalAlignment="Left" Name="chkTheoDoiCongNo" VerticalAlignment="Center" />
                                <telerik:RadComboBox Name="cmbTinhChatTK" Grid.Column ="1" Grid.Row="10" IsEditable="True" TextSearchMode="Contains" IsFilteringEnabled="True" IsTextSearchEnabled="True" OpenDropDownOnFocus="True" />
                                <telerik:RadMaskedDateTimeInput Name="raddtTuNgayApDung" Mask="dd/MM/yyyy"  Grid.Column="4" Grid.Row="8" Margin="0,0,40,0" HorizontalAlignment="Stretch"/>
                                <DatePicker Grid.Column="4" Grid.Row="8" HorizontalAlignment="Right" Name="dtpTuNgayApDung" Width="30" SelectedDate="{Binding Path=Value, ElementName=raddtTuNgayApDung}"/>

                                <telerik:RadComboBox Name="cmbTinhChatGocTK" Grid.Column ="4" Grid.Row="10" IsEditable="True" TextSearchMode="Contains" IsFilteringEnabled="True" IsTextSearchEnabled="True" OpenDropDownOnFocus="True" />

                                <telerik:RadComboBox Name="cmbTinhChatBTru" Grid.Column ="1" Grid.Row="12" IsEditable="True" TextSearchMode="Contains" IsFilteringEnabled="True" IsTextSearchEnabled="True" OpenDropDownOnFocus="True" Visibility="Collapsed"/>



                            </Grid>
                        </GroupBox>
                    </DockPanel>
                    <!--</ScrollViewer>-->
                </telerik:RadTabItem>
                <telerik:RadTabItem Header="{DynamicResource U.DungChung.Tab.ThongTinKiemSoat_2}" TabIndex="3" HeaderTemplate="{StaticResource HeaderTemplate}" HorizontalContentAlignment="Left" Height="{Binding ElementName=grMain, Path=ActualWidth,
                Converter={uc:MathConverter}, ConverterParameter=x/5}" >
                    <DockPanel>
                        <GroupBox Header="{DynamicResource U.DungChung.ThongTinKiemSoat}" Padding="10,10,10,5" Margin="3">

                            <Grid  VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="6"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="6"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="6"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="6"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="6"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="6"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label Content="{DynamicResource U.DungChung.TrangThaiBanGhi}" Grid.Column="0" Grid.Row="0"/>
                                <TextBox Name="txtTrangThai" Grid.Column="1" Padding="0,3,0,0" IsEnabled="False" />
                                <Label Content="{DynamicResource U.DungChung.NgayLap}" Grid.Column="0" Grid.Row="2"/>
                                <telerik:RadMaskedDateTimeInput Name="raddtNgayNhap" Grid.Column="1" Grid.Row="2" Mask="dd/MM/yyyy" AcceptsReturn="False" IsClearButtonVisible="False" HorizontalAlignment="Stretch" IsEnabled="False" />
                                <Label Content="{DynamicResource U.DungChung.NguoiLap}" Grid.Row="4"/>
                                <TextBox Name="txtNguoiLap" Padding="0,3,0,0" Grid.Column="1" Grid.Row="4" IsEnabled="False" />
                                <Label Content="{DynamicResource U.DungChung.NgayCapNhat}" Grid.Column="0" Grid.Row="6"/>
                                <telerik:RadMaskedDateTimeInput Name="raddtNgayCNhat" Grid.Column="1" Grid.Row="6" Mask="dd/MM/yyyy" IsClearButtonVisible="False" AcceptsReturn="True"  Margin="0,5,0,0" HorizontalAlignment="Stretch" IsEnabled="False" />
                                <Label Content="{DynamicResource U.DungChung.NguoiCapNhat}" Grid.Column="0" Grid.Row="8"/>
                                <TextBox Name="txtNguoiCapNhat" Padding="0,3,0,0" Grid.Column="1" Grid.Row="8" IsEnabled="False" />
                            </Grid>
                        </GroupBox>
                    </DockPanel>
                </telerik:RadTabItem>
            </telerik:RadTabControl>
        </DockPanel>
    </Grid>
</UserControl>