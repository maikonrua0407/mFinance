<UserControl x:Class="PresentationWPF.BaoCao._BIDV.TDVM.TDVM_BANG_KE_RUT_VON"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:ribbon="http://schemas.microsoft.com/winfx/2006/xaml/presentation/ribbon" 
             xmlns:telerikMaskInput="clr-namespace:Telerik.Windows.Controls.MaskedInput;assembly=Telerik.Windows.Controls.Input"               
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <Grid>
                <GroupBox Header="Bảng kê rút vốn cụ thể" Margin="3,10,3,3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                        </Grid.RowDefinitions>
                        <Label Content="{DynamicResource U.BaoCao.MaGiaoDich}" Grid.Column="0" Grid.Row="0"/>
                        <Label Content="{DynamicResource U.BaoCao.NgonNgu}" Grid.Column="0" Grid.Row="2"/>
                        <Label Content="{DynamicResource U.BaoCao.DinhDang}" Grid.Column="3" Grid.Row="2"/>
                        <TextBox Name="txtMaGiaoDich" Grid.Column="1" Grid.Row="0"/>
                        <telerik:RadComboBox IsEditable="True" Grid.Column="1" Grid.Row="2" Name="cmbNgonNgu" />
                        <telerik:RadComboBox IsEditable="True" Grid.Column="4" Grid.Row="2" Name="cmbDinhDang" />
                    </Grid>
                </GroupBox>
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>
