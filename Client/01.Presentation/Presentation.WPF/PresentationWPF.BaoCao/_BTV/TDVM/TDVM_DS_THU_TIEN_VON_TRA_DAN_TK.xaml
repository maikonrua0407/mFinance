<UserControl x:Class="PresentationWPF.BaoCao._BTV.TDVM.TDVM_DS_THU_TIEN_VON_TRA_DAN_TK"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:uc="clr-namespace:PresentationWPF.CustomControl;assembly=PresentationWPF.CustomControl" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:ribbon="http://schemas.microsoft.com/winfx/2006/xaml/presentation/ribbon" 
             xmlns:telerikMaskInput="clr-namespace:Telerik.Windows.Controls.MaskedInput;assembly=Telerik.Windows.Controls.Input"    
             d:DesignHeight="300" d:DesignWidth="800" xmlns:my="clr-namespace:System;assembly=mscorlib">
    <UserControl.Resources>
        <!--<my:String x:Key="U.BaoCao._BTV.TDVM.TDVM_DS_THU_TIEN_VON_TRA_DAN_TK.ThangThuTien">Tháng thu tiền :</my:String>
        <my:String x:Key="U.BaoCao._BTV.TDVM.TDVM_DS_THU_TIEN_VON_TRA_DAN_TK.Dot">Đợt :</my:String>
        <my:String x:Key="U.BaoCao._BTV.TDVM.TDVM_DS_THU_TIEN_VON_TRA_DAN_TK.ThongTinThanhVien">Thông tin thành viên</my:String>
        <my:String x:Key="U.BaoCao._BTV.TDVM.TDVM_DS_THU_TIEN_VON_TRA_DAN_TK.MaNhom">Mã nhóm</my:String>
        <my:String x:Key="U.BaoCao._BTV.TDVM.TDVM_DS_THU_TIEN_VON_TRA_DAN_TK.TenNhom">Tên nhóm</my:String>-->
    </UserControl.Resources>
    <Grid>
        <DockPanel>
            <Grid>
                <DockPanel>
                    <GroupBox Header="{DynamicResource U.BaoCao._BTV.TDVM.TDVM_DS_THU_TIEN_VON_TRA_DAN_TK}" Margin="3,10,3,3" DockPanel.Dock="Top">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="6" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="6" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="6" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="6" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="6" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="15" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Label Content="{DynamicResource U.BaoCao.ChiNhanh}" Grid.Row="0" Grid.Column="0"/>
                            <Label Content="{DynamicResource U.BaoCao.PhongGiaoDich}" Grid.Row="0" Grid.Column="3"/>                            
                            <Label Content="{DynamicResource U.BaoCao._BTV.TDVM.TDVM_DS_THU_TIEN_VON_TRA_DAN_TK.Dot}" Grid.Row="4" Grid.Column="3"/>
                            <Label Content="{DynamicResource U.BaoCao.NgayBaoCao}" Grid.Row="6" Grid.Column="0"/>
                            <Label Content="{DynamicResource U.BaoCao._BTV.TDVM.TDVM_DS_THU_TIEN_VON_TRA_DAN_TK.ThangThuTien}" Grid.Row="4" Grid.Column="0" />
                            <Label Grid.Row="9" Grid.ColumnSpan="5" Height="0.5" Background="DarkGray" />
                            <Label Content="{DynamicResource U.BaoCao.KhuVuc}" Grid.Row="2" Grid.Column="0"/>
                            <Label Content="{DynamicResource U.BaoCao.Cum}" Grid.Row="2" Grid.Column="3"/>                            
                            <Label Content="{DynamicResource U.BaoCao.NgonNgu}" Grid.Row="10" Grid.Column="0"/>
                            <Label Content="{DynamicResource U.BaoCao.DinhDang}" Grid.Row="10" Grid.Column="3"/>
                            <telerik:RadComboBox IsEditable="True" Name="cmbChiNhanh" Grid.Row="0" Grid.Column="1"  />
                            <telerik:RadComboBox IsEditable="True" Name="cmbPhongGD" Grid.Row="0" Grid.Column="4" />
                            <telerik:RadMaskedDateTimeInput Name="raddtNgayBaoCao" Grid.Row="6" Grid.Column="1" Mask="dd/MM/yyyy" HorizontalAlignment="Stretch" Margin="0,0,35,0"/>
                            <DatePicker Grid.Row="6" Grid.Column="1" HorizontalAlignment="Right" Width="30" SelectedDate="{Binding Path=Value,ElementName=raddtNgayBaoCao}" />                            
                            <telerik:RadMaskedDateTimeInput Name="radtThangThuTien" Grid.Row="4" Grid.Column="1" Mask="MM/yyyy" HorizontalAlignment="Stretch" Margin="0,0,35,0" ValueChanged="radtThangThuTien_ValueChanged" />
                            <DatePicker Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right" Width="30" SelectedDate="{Binding Path=Value,ElementName=radtThangThuTien}" />
                            <telerik:RadComboBox IsEditable="True" Name="cmbNgonNgu" Grid.Row="10" Grid.Column="1" />
                            <telerik:RadComboBox IsEditable="True" Name="cmbDinhDang" Grid.Row="10" Grid.Column="4" />
                            <telerik:RadComboBox Name="cmbKhuVuc" Grid.Column="1" Grid.Row="2" />
                            <telerik:RadComboBox Name="cmbCum" Grid.Column="4" Grid.Row="2" />
                            <telerik:RadComboBox Name="cmbKyThu" IsEditable ="True" TextSearchMode="Contains" OpenDropDownOnFocus="True" IsFilteringEnabled="True" IsTextSearchEnabled="True" Grid.Column="4" Grid.Row="4" />
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="{DynamicResource U.BaoCao._BTV.TDVM.TDVM_DS_THU_TIEN_VON_TRA_DAN_TK.ThongTinThanhVien}" Margin="3,10,3,3" DockPanel.Dock="Top">
                        <Grid>
                            <telerik:RadGridView Name="grdKhachHang" ShowGroupPanel="False" Margin="3,0" ItemsSource="{Binding}" SelectionMode="Extended" 
                    AutoGenerateColumns="False" CanUserFreezeColumns="False" RowIndicatorVisibility="Collapsed" DockPanel.Dock="Top" TabIndex="26" >
                                <telerik:RadGridView.Columns>
                                    <telerik:GridViewSelectColumn MaxWidth="20" MinWidth="20"/>
                                    <telerik:GridViewDataColumn Header="ID" IsVisible="False" IsReadOnly="True" DataMemberBinding="{Binding ID}"/>
                                    <uc:MyColumn Header="{DynamicResource U.DungChung.STT}" Width="50" IsReadOnly="True" />
                                    <telerik:GridViewDataColumn Header="{DynamicResource U.BaoCao._BTV.TDVM.TDVM_DS_THU_TIEN_VON_TRA_DAN_TK.MaNhom}" Width="*" IsReadOnly="True" DataMemberBinding="{Binding MA_NHOM}"/>
                                    <telerik:GridViewDataColumn Header="{DynamicResource U.BaoCao._BTV.TDVM.TDVM_DS_THU_TIEN_VON_TRA_DAN_TK.TenNhom}"  Width="2*" IsReadOnly="True" DataMemberBinding="{Binding TEN_NHOM}"/>
                                </telerik:RadGridView.Columns>
                            </telerik:RadGridView>
                        </Grid>
                    </GroupBox>
                </DockPanel>
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>
