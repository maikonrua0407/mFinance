                                            <Label Content="(*)" Foreground="Red" Margin="-5,0,0,0" />
                                        </StackPanel>

                                        <telerik:RadComboBox Name="cmbLoaiTien" Grid.Row="0" Grid.Column="4" HorizontalAlignment="Stretch" IsEditable="True" TabIndex="0" />
