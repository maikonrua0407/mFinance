        <my:String x:Key="U.DanhMuc.KhuVuc.ucKhuVucCT_02.TabThongTinKiemSoat">_2. Thông tin kiểm soát</my:String>
        <my:String x:Key="U.DanhMuc.KhuVuc.ucKhuVucCT_02.GroupThongChung">Thông tin chung</my:String>        
