                Converter={pcc:MathConverter}, ConverterParameter=x/5}"  TabIndex="1" Visibility="Collapsed" IsSelected="True">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="19*"/>
                            <!--<ColumnDefinition Width="*"/>-->
                        </Grid.ColumnDefinitions>
