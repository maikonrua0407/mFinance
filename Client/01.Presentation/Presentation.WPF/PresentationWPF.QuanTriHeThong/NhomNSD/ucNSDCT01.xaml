                                        <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="16">
                                            <Label Content="{DynamicResource U.QuanTriHeThong.NhomNSD.ucNSDCT01.NgayHetHan}" />
                                            <!--<Label Content="(*)" Foreground="Red" />-->
                                        </StackPanel>

                                        <telerik:RadMaskedDateTimeInput Name="raddtNgayHetHan" Grid.Column="4" Grid.Row="16" HorizontalAlignment="Stretch" Value="{Binding Path=SelectedDate,ElementName=dtpNgayHetHan}" Margin="0,0,40,0" Padding="3" IsEnabled="True" />
                                        <DatePicker Name="dtpNgayHetHan" Grid.Row="16" Grid.Column="4" HorizontalAlignment="Right" Width="30" IsEnabled="True" />

                                        <Label Grid.Row="17" Grid.ColumnSpan="5" Height="0.5" Background="Silver"/>

                                        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="18" Name="spnMatKhau">
                                            <Label Content="{DynamicResource U.QuanTriHeThong.NhomNSD.ucNSDCT01.MatKhau}" Name="lblMatKhau"/>
                                            <Label Content="(*)" Foreground="Red" Name="lblMatKhauReq"/>
                                        </StackPanel>

                                        <PasswordBox Name="pwbMatKhau" Grid.Column="1" Grid.Row="18" Padding="3" />

                                        <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="18" Name="spnNhapLaiMatKhau">
                                            <Label Content="{DynamicResource U.QuanTriHeThong.NhomNSD.ucNSDCT01.XacNhanMatKhau}" Name="lblNhapLaiMatKhau"/>
                                            <Label Content="(*)" Foreground="Red" Name="lblNhapLaiMatKhauReq" Margin="-5,0,0,0"/>
                                        </StackPanel>

                                        <PasswordBox Name="pwbNhapLaiMatKhau" Grid.Column="4" Grid.Row="18" Padding="3" />

