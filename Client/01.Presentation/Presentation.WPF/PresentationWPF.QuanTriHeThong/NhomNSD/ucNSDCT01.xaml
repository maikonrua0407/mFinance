                                        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="14">
                                            <Label Content="{DynamicResource U.QuanTriHeThong.NhomNSD.ucNSDCT01.TinhTrang}" Name="lblTinhTrang"/>
                                            <Label Content="(*)" Foreground="Red" />
                                        </StackPanel>

                                        <telerik:RadComboBox Name="cmbTinhTrang" Grid.Column="1" Grid.Row="14" Padding="3" IsEditable="True"/>

                                        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="16">
                                            <Label Content="{DynamicResource U.QuanTriHeThong.NhomNSD.ucNSDCT01.NgayHieuLuc}" Name="lblNgayHieuLuc"/>
                                            <Label Content="(*)" Foreground="Red" />
                                        </StackPanel>

                                        <telerik:RadMaskedDateTimeInput Name="raddtNgayHieuLuc" Grid.Column="1" Grid.Row="16" HorizontalAlignment="Stretch" Value="{Binding Path=SelectedDate,ElementName=dtpNgayHieuLuc}" Margin="0,0,40,0" Padding="3" IsEnabled="True" />
