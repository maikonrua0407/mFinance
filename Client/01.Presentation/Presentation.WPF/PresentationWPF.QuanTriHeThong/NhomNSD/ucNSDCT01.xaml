                                        <telerik:RadMaskedNumericInput Mask="#5" Name="telnumDoiMatKhau" Grid.Column="4" Grid.Row="20" HorizontalAlignment="Left" Width="50" IsClearButtonVisible="False" IsEnabled="True" TextMode="PlainText" />
                                        <telerik:RadComboBox Name="cmbDoiMatKhau" Grid.Column="4" Grid.Row="20" Margin="56,0,0,0" IsEditable="True" />

