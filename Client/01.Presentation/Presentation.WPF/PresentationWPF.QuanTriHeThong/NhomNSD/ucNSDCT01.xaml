                                        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="6">
                                            <Label Content="{DynamicResource U.QuanTriHeThong.NhomNSD.ucNSDCT01.TenDangNhap}" Name="lblTenDangNhap"/>
                                            <Label Content="(*)" Foreground="Red" Name="lblStarTenDangNhap"/>
                                        </StackPanel>

                                        <TextBox Name="txtTenDangNhap" Grid.Column="1" Grid.Row="6" Padding="3" IsEnabled="True" CharacterCasing="Upper"/>

                                        <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="6">
                                            <Label Content="{DynamicResource U.QuanTriHeThong.NhomNSD.ucNSDCT01.NhanVien}" Name="lblNhanVien"/>
                                            <!--<Label Content="(*)" Foreground="Red" Name="lblStarNhanVien"/>-->
                                        </StackPanel>

                                        <TextBox Name="txtNhanVien" Grid.Column="4" Grid.Row="6" Padding="3" Margin="0,0,40,0" KeyDown="txtNhanVien_KeyDown" />

                                        <Button Name="btnNhanVien" Grid.Column="4" Grid.Row="6" Content="F3" Padding="3" HorizontalAlignment="Right" Width="30" Click="btnNhanVien_Click"/>

