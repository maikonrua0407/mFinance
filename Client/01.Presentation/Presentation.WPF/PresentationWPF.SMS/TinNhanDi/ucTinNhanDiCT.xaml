                                </Grid>
                            </GroupBox>
                            <GroupBox Header="{DynamicResource U.SMS.ucTinNhanDiCT.GroupDanhSachTinNhan}" Margin="3" Name="grbDanhSachTinNhan" Padding="10,10,10,5" DockPanel.Dock="Top">
