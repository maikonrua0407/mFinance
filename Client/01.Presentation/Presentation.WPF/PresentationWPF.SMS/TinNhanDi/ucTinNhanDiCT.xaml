                                        <RowDefinition Height="6" />
                                        <RowDefinition Height="100" />
                                        <RowDefinition Height="6" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Label Grid.Row="0" Grid.Column="0" Content="{DynamicResource U.SMS.ucTinNhanDiCT.SoDienThoai}" VerticalAlignment="Top"/>
