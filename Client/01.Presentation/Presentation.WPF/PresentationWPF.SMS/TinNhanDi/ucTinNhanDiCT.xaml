                                </Grid>
                            </GroupBox>
                            <GroupBox Header="{DynamicResource U.SMS.ucTinNhanDiCT.GroupTTinTinNhan}" Margin="3" Name="grbThongTinChung" Padding="10,10,10,5" DockPanel.Dock="Top">
